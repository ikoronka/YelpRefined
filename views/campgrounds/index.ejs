
<% include ../partials/header %>

    <header class="jumbotron">
        <h1>Great campgrounds</h1>
        <p>Camp here and we get 10% of your purchase! Yup, just give us money.</p>
        <p>
            <a class="btn btn-large btn-primary" href="/campgrounds/new">
                Add a campground so we have more money!
            </a>
        </p>
    </header>

    <div class="row text-center" style="flex-wrap: wrap; display: flex" >
        <% campgrounds.forEach(function (campgrounds) { %>
        <div class="col-md-4 col-sm-6 col-lg-4">
            <div class="thumbnail">
                <img src="<%=campgrounds.image%>" alt="" width="230px" height="120px">
                <div class="caption">
                    <h4><%= campgrounds.name%></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campgrounds._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <%});%>
    </div>
<% include ../partials/footer%>
