<% include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead text-center">Yelpcamp</p>
            <div class="list-group">
                <ul>
                    <li class="list-group-item active">I1</li>
                    <li class="list-group-item">I2</li>
                    <li class="list-group-item">I3</li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%=campground.image%>" alt="" width="460px" height="240px" style="border-radius: 5px">
                <div class="caption-full">
                    <h4 class="text-right">$9.000</h4>
                    <h4><a href=""><%= campground.name %></a></h4>
                    <p><%=campground.description%></p>
                    <p><a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a></p>
                    <small id="emailHelp" class="form-text text-muted">Submitted by: <%= campground.author.username %></small>
                </div>
            </div>
            <div style="border: 1px lightgray solid; border-radius: 5px; background-color: lightgrey;">
                <div class="well" style="margin: 5px;">
                    <div class="text-right">
                        <a class="btn btn-large btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">
                            New comment
                        </a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function (comment) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author.username %>
                            <span style="font-size: 0.8em">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    <hr>
                    <%})%>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer%>